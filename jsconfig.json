{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "checkJs": true,
    "declaration": false,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "*.js",
    "**/*.js",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
